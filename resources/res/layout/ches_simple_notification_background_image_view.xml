<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_gravity="top" android:id="@+id/ches_background_notification" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="8dp">
        <LinearLayout android:gravity="end" android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="80">
            <TextView android:textStyle="bold" android:gravity="center_vertical" android:id="@+id/ches_notification_title" android:layout_width="wrap_content" android:layout_height="0dp" android:text="xxxx" android:layout_weight="1"/>
            <TextView android:id="@+id/ches_notification_content" android:layout_width="wrap_content" android:layout_height="0dp" android:text="xxxx" android:layout_weight="1"/>
        </LinearLayout>
        <RelativeLayout android:padding="4dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="20">
            <ImageView android:id="@+id/ches_large_icon_notification" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ic_apps" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
