<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@drawable/ches_install_dialog_gradient" android:padding="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:weightSum="9" android:minWidth="300dp" android:minHeight="300dp" android:layout_centerInParent="true">
        <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="8">
            <TextView android:textSize="25sp" android:textColor="#000000" android:gravity="end" android:layout_gravity="right" android:id="@+id/install_dialog_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="20dp" android:text="پوش آپگرید "/>
            <TextView android:textSize="17sp" android:textColor="#000000" android:gravity="right" android:layout_gravity="right" android:id="@+id/install_dialog_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="20dp" android:text="بدو بدو پوشهه"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:padding="5dp" android:layout_width="match_parent" android:layout_height="0dp" android:weightSum="2" android:layout_weight="1.3">
            <Button android:textColor="#ffffff" android:id="@+id/install_dialog_cancel" android:background="@drawable/ches_gradient_button" android:padding="4dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="2dp" android:text="انصراف" android:layout_weight="1"/>
            <Button android:textColor="#ffffff" android:id="@+id/install_dialog_install" android:background="@drawable/ches_gradient_button" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="2dp" android:text="دانلود" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
